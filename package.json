{
  "name": "openrndr_org-website",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "react-static start",
    "stage": "react-static build --staging",
    "build":
      "mkdir -p public && mkdir -p public/data && yarn data:fetch && react-static build",
    "test": "jest --watch",
    "serve": "serve dist -p 3000",
    "data:fetch": "rm -rf public/data/*.json && ts-node data/index",
    "format": "prettier './**/*.{js,ts,tsx}' --write",
    "lint": "tslint -p . -c tslint.json --fix",
    "deploy":
      "curl -X POST -d '' https://api.netlify.com/build_hooks/5b0d1ecfb3127448d06e8e15"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
  },
  "dependencies": {
    "@ibm/type": "^0.5.4",
    "@types/axios": "^0.14.0",
    "animated-scroll-to": "^1.2.0",
    "axios": "^0.18.0",
    "compare-versions": "^3.2.1",
    "datocms-client": "^0.3.41",
    "detect-browser": "^2.5.0",
    "fetch-jsonp": "^1.1.3",
    "html-to-text": "^4.0.0",
    "install": "^0.10.4",
    "lodash": "^4.17.19",
    "node-fetch": "^2.1.2",
    "npm": "^5.6.0",
    "nuka-carousel": "^4.0.3",
    "prop-types": "^15.6.1",
    "pure-react-carousel": "^1.12.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-imgix": "^7.1.1",
    "react-player": "^1.4.0",
    "react-reveal": "^1.2.1",
    "react-router": "^4.2.0",
    "react-static": "^5.5.14",
    "react-transition-group": "^2.3.1",
    "react-truncate-html": "^0.1.7",
    "react-visibility-sensor": "^3.11.0",
    "rss-parser": "^3.1.2",
    "serve": "^10.1.2",
    "webpack-manifest-plugin": "^2.0.3",
    "xml2js": "^0.4.19"
  },
  "devDependencies": {
    "@types/html-to-text": "^1.4.31",
    "@types/jest": "^22.1.1",
    "@types/lodash": "^4.14.92",
    "@types/node": "^9.4.7",
    "@types/prop-types": "^15.5.2",
    "@types/react": "^16.0.40",
    "@types/react-dom": "^16.0.2",
    "@types/react-hot-loader": "^3.0.5",
    "@types/react-router": "^4.0.16",
    "@types/react-router-dom": "^4.2.6",
    "@types/react-transition-group": "^2.0.8",
    "@types/webpack-env": "^1.13.6",
    "convert-tsconfig-paths-to-webpack-aliases": "^0.9.2",
    "extract-text-webpack-plugin": "^3.0.2",
    "husky": "^1.0.0-rc.2",
    "jest": "^22.1.4",
    "nodemon": "^1.17.3",
    "prettier": "^1.10.2",
    "pretty-quick": "^1.2.2",
    "ts-jest": "^22.4.4",
    "ts-loader": "^3.1.1",
    "ts-node": "^7.0.1",
    "ts-transformer-keys": "^0.3.1",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.4.2",
    "tslint-config-prettier": "^1.6.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.6.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && yarn lint"
    }
  }
}
